{
  "server": true,
  "bootstrap_expect": 1,
  "client_addr": "0.0.0.0",
  "bind_addr": "0.0.0.0",
  "advertise_addr": "{{ hostvars[inventory_hostname]['ip'] }}",
  "datacenter": "{{ hostvars[inventory_hostname]['datacenter'] }}",
  "data_dir": "/var/lib/consul",
  "log_level": "DEBUG",
  "enable_syslog": false,
  "encrypt": "{{ hostvars[inventory_hostname]['hash'] }}",
  "rejoin_after_leave": true,
  "verify_incoming": false,
  "verify_outgoing": false,
  "skip_leave_on_interrupt": true,
  "leave_on_terminate": true,
  "ui": true
}
